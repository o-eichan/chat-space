.side-bar
  .side-bar__user-name
    .top-items
      %p.top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path, class: "top-items__icons--btn top-items__icons--edit" do
          = icon('far', 'edit', class: 'edit' )
        = link_to edit_user_path(current_user), class: "top-items__icons--btn top-items__icons--setting" do
          = icon('fas', 'cog', class: 'setting')

  .side-bar__group-list
    - current_user.groups.each do |group|
      .group-infomation
        = link_to group_messages_path(group) do
          .group-name 
            = group.name
          .group-message 
